<div>
  <%= form_for @new_datasheet, html: { multipart: true, "@submit": "checkUpload", class: "form-inline"} do |f| %>

  <div class="form-group column">
    <%= f.select(:datasheet_category_id, nil, { }, {"v-model":"selectedCategory", "v-on:change": "fetchDatasheets", class:"form-control", id:"categories_menu"}) do %>
      <%= options_for_select(
        @datasheet_categories.collect { |d| [d.name, d.id]}, @datasheet_categories[0].id
      )
      %>
    <% end %>
  </div>

  <div class="form-group upload-btn-wrapper btn btn-warning">
    <%= f.file_field :pdfDatasheet, "v-on:change": "selectFiles", class: "inputfile", id: "pdf_inputfile", multiple: true %>
    <label>Select file</label>
  </div>

  <label id="file_name_label"> {{ fileName }} </label>

  <div class="form-group">
    <%= f.submit "Upload", class: "btn btn-info", data: { disable_with: false } %>
  </div>

  <% end %>
</div>
